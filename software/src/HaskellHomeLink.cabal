-- extra-source-files:

common warnings
    ghc-options: -Wall

executable Home
    -- Import common warning flags.
    import:           warnings

    -- .hs or .lhs file containing the Main module.
    main-is:          Main.hs


    -- Modules included in this executable, other than Main.
    other-modules: Audio,
-- Error,
                      -- ErrorStack,
                      -- Error.Generic,
                      -- Error.Parser,
                      HTTP.Client,
                      -- Rest.Server,
                      -- Rest.System,
                      -- Rest.Utils,
                      -- System.CPU,
                      -- System.OS,
                      -- TinyServant,
                      -- TinyServant.API,
                      -- TinyServant.API.ContentTypes,
                      -- TinyServant.API.Status,
                      -- TinyServant.API.UVerb,
                      -- TinyServant.API.ResponseHeaders,
                      -- TinyServant.API.Header,
                      -- TinyServant.Combinators,
                      -- TinyServant.Server,
                      -- TinyServant.Server.UVerb,
                      -- TinyServant.Union

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:    aeson,
                      base-compat-batteries,
                      case-insensitive,
                      alsa-hs,
                      attoparsec,
                      base ^>=4.18.2.1,
                      bytestring,
                      crypton-connection,
                      data-default-class,
                      deepseq,
                      http-api-data,
                      http-client,
                      http-client-tls,
                      http-media,
                      http-types,
                      minimp3-hs,
                      mtl,
                      random,
                      sop-core,
                      string-conversions,
                      text,
                      time,
                      tls,
                      transformers,
                      wai,
                      warp

    -- Directories containing source files.
    hs-source-dirs:   app

    -- Base language which the package is written in.
    default-language: GHC2021

    ghc-options: -O2 -threaded

library alsa-hs
    -- Import common warning flags.
    import:           warnings

    -- Modules exported by the library.
    exposed-modules: Alsa.PCM.Handle,
                     Alsa.PCM.Params,
                     Alsa.PCM.Stream,
                     Alsa.PCM.Error

    -- Modules included in this library but not exported.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:    base

    -- Directories containing source files.
    hs-source-dirs:   libs

    -- Base language which the package is written in.
    default-language: GHC2021

    c-sources: cbits/alsa-hs/haskell_alsa.c

    include-dirs: cbits/alsa-hs

    pkgconfig-depends: alsa


library minimp3-hs
    -- Import common warning flags.
    import:           warnings

    -- Modules exported by the library.
    exposed-modules: Minimp3

    -- Modules included in this library but not exported.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:    base

    -- Directories containing source files.
    hs-source-dirs:   libs/Minimp3

    -- Base language which the package is written in.
    default-language: GHC2021

    c-sources: cbits/minimp3/minimp3-hs.c

    include-dirs: cbits/minimp3

    cc-options: -O3
